<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Optiflow.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="50">
            <Label Text="Settings" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Label Text="Password" />
            <Entry x:Name="usernameEntry" IsPassword="true" Text="{Binding password}"/>
            <Label Text="New Password" />
            <Entry x:Name="passwordEntry" IsPassword="true" Text="{Binding newPw}"/>
            <Label Text="Retype New Password" />
            <Entry x:Name="passwordEntry2" IsPassword="true" Text="{Binding newPw2}"/>
            <Button Text="Change Password" Clicked="Changed_Clicked"/>
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>